Question 1
===========


int ledpin=10;

void setup()
{
pinMode(ledpin,OUTPUT);  
}
void loop() 
{
  digitalWrite(ledpin,HIGH);
  delay(500);
  digitalWrite(ledpin,LOW);
  delay(1500);
}



Question2
==========


void setup()
{
 pinMode(4,OUTPUT);
 pinMode(5,OUTPUT);
 pinMode(6,OUTPUT);
 pinMode(7,OUTPUT);
}
void loop() 
{
  for( int i=4 ; i<= 7; i++)
  {
    digitalWrite(i,HIGH);
    delay(1000);
    digitalWrite(i,LOW);
    if(i==7)
    {
      i=3;
    }
  }
  
}



